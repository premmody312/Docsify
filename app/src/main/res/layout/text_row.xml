<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/thirtydp"
            android:layout_height="@dimen/drawable_width"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginLeft="@dimen/image_padding"
            android:layout_marginRight="@dimen/widget_margin"
            android:layout_marginTop="@dimen/margin10"
            android:src="@drawable/menu"></ImageView>

        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin10"
            android:layout_marginTop="@dimen/margin10"
            android:lines="1"
            android:text="@+id/TextView01"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"></TextView>

</LinearLayout>